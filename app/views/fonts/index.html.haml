.row
	.span10
		= paginate @fonts
		.row
			%section#fonts.span7
				- @fonts.each do |font|
					- content_for :head do
						= google_webfonts_link_tag font.data["family"] => font.data["variants"]
					%span.font
						= font.data["family"]
						%i.icon-plus.pull-right
			%section#user_fonts.span3
				.well
					%h2 MyFonts
					%ul
						- @user_fonts.each do |font|
							%li.font-simple
								= font.name
							.clearfix
					.clearfix
:javascript
	$('document').ready(function(){
		Workshop.fonts.initialize();
	})