.row
	%h1 Fonts
	= paginate @fonts
	.span10
		.row
			%section#fonts.span7
				%h2 Add a font
				- @fonts.each do |font|
					- content_for :head do
						= google_webfonts_link_tag font.data["family"] => font.data["variants"]
					%span.font
						= font.data["family"]
						%i.icon-plus.pull-right
					.clearfix
			%section#user_fonts.span3
				%h2 MyFonts
				%ul
					- @user_fonts.each do |font|
						%li.font-simple>= font.name
						.clearfix
				.clearfix
:javascript
	$('document').ready(function(){
		Workshop.fonts.initialize();
	})